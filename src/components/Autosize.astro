---
import type { HTMLAttributes } from 'astro/types';
export interface Props extends HTMLAttributes<"textarea"> {
  className?: string;
}

const { className, ...attributes } = Astro.props;
---

<textarea required class:list={["autosize resize-none w-full box-border", className]} {...attributes}></textarea>
<script>
  function fit(e: HTMLTextAreaElement) {
    e.style.height = "";
    e.style.height = `${e.scrollHeight + 4}px`;
  }

  const textEl = document.querySelectorAll(
    "textarea.autosize"
  ) as NodeListOf<HTMLTextAreaElement>;
  textEl.forEach((e) => {
    e.addEventListener("input", () => fit(e));
  });
</script>
