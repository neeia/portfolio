---
export interface Props {
  company?: string;
  title?: string;
  date: string;
  location: string;
}

const { company, title, date, location } = Astro.props;
---

<li class={`m-0 w-full block${company ?  "" : " -mt-2"}`}>
  <div class="flex gap-1">
    {company && <h3>{company}</h3>}
    {title && <span>{title}</span>}
  </div>
  <div class="text-xs">
    <span>{date}</span>
    <span>{location}</span>
  </div>
  <ul class="mt-2 mb-3 pl-1 leading-4">
    <slot />
  </ul>
</li>

<style>
  div {
    display: flex;
    align-items: baseline;
    gap: 1ch;
  }
  div > *:not(:first-child)::before {
    content: "|";
    font-size: larger;
    margin-right: 0.5ch;
  }

  @media screen and (max-width: 500px) {
    div {
      flex-wrap: wrap;
      gap: 0;
      line-height: 1.2;
      margin-bottom: 4px;
    }
    div.company {
      flex-direction: column;
    }
    div > *:not(:first-child)::before {
      content: "";
      display: none;
    }
    .date {
      justify-content: space-between;
    }
  }
</style>
