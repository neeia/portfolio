---
import "../styles/reset.css";
import "../styles/global.css";
import "../styles/resume.css";
import PrintLayout from "../layouts/PrintLayout.astro";
import Header from "../components/resume/Header.astro";
import SectionBlock from "../components/resume/SectionBlock.astro";

const skills = {
  Languages: [
    "JavaScript",
    "TypeScript",
    "HTML",
    "CSS",
    "SQL",
    "Python",
    "C#",
    "Java",
  ],
  "Web Frameworks": [
    "React",
    "NextJS",
    "ASP.NET",
    "Express.js",
    "Astro",
    "Svelte",
  ],
  "Tools and Libraries": [
    "Node.js",
    "Git",
    "GitHub",
    "Yarn",
    "NPM",
    "Redux",
    "Firebase",
    "Supabase",
    "MongoDB",
    "Strapi",
    "Auth0",
  ],
  "Development Skills": [
    "Accessibility",
    "Agile / Scrum",
    "Responsive Design",
    "REST APIs",
    "SEO",
  ],
};
---

<PrintLayout
  title="Resume"
  description="This is Neia Hu's most current resume."
>
  <article id="resume">
    <Header />
    <p>
      Authorized to work for any US employer. &nbsp; &nbsp;Open to relocation.
    </p>
    <section>
      <h2>Education</h2>
      <ul>
        <SectionBlock
          sub="B.S. Computer Science / Mathematics"
          title="Northeastern University"
          date="Sep 2018 - Dec 2021"
          location="Boston, MA"
        />
      </ul>
    </section>
    <section>
      <h2>Experience</h2>
      <ul>
        <SectionBlock
          sub="Freelancer"
          title="Fullstack Developer"
          date="Dec 2022 - Present"
          location="Remote"
        >
          <li>
            Used <b>NextJS</b> alongside <b>Strapi</b> to develop a responsive web
            application to allow users to create and compete in teams
          </li>
          <li>
            Designed and developed a RESTful API with <b>Express</b>,
            <b>AWS S3</b>, and <b>Postgres</b>, managing authentication with <b
              >Auth0</b
            >
          </li>
          <li>
            Prototyped and developed clean, straightforward user interfaces to
            match user and client needs
          </li>
          <li>
            Determined project scope to set deadlines while ensuring the correct
            tools were used for the purpose
          </li>
          <li>
            Maintained regular communication with clients to ensure deadlines
            were met and visions were aligned
          </li>
        </SectionBlock>
        <SectionBlock
          title="Automation / Software Engineer"
          sub="TDK Headway Technologies"
          date="Apr – Oct 2022"
          location="Milpitas, CA"
        >
          <li>
            Developed internal solutions regarding automation and collection of
            data produced by product engineers
          </li>
          <li>
            Used <b>ASP.NET</b> and <b>MS SQL server</b>, with Visual Basic to
            maintain legacy applications
          </li>
        </SectionBlock>
        <SectionBlock
          title="CS1800 Teaching Assistant"
          sub="Khoury College, Northeastern University"
          date="Sep – Dec 2019"
          location="Boston, MA"
        >
          <li>
            Taught discrete mathematics, logic, and proofs in regular office
            hours and recitation sessions
          </li>
          <li>
            Modelled problems in different ways to effectively communicate and
            break down complicated mathematical concepts
          </li>
        </SectionBlock>
      </ul>
    </section>
    <section>
      <h2>Projects</h2>
      <ul>
        <SectionBlock
          title="Krooster"
          sub="Lead Developer"
          location="TypeScript, NextJS, Redux, MUI, Postgres, Sentry"
          date="Jun 2021 – Present"
        >
          <li>
            Built an open source web app using <b>TypeScript</b> with
            <b>NextJS</b> for the game "Arknights", which allows users to record
            and share in-game collections with other players and includes a number
            of useful tools
          </li>
          <li>
            Used <b>Supabase</b> hosted <b>PostgreSQL</b> and <b>Vercel</b> for authentication,
            storage, hosting, and analytics
          </li>
          <li>
            Actively serving over <b>10,000 registered users</b> internationally
            with regular updates, issue tracking, and bug fixes
          </li>
          <li>
            Collaborated with other developers to fully integrate multiple other
            web applications into Krooster
          </li>
        </SectionBlock>
        <SectionBlock
          title="KQM: Star Rail"
          sub="Frontend Developer, UI / Accessibility"
          location="TypeScript, Astro, Preact / React, TailwindCSS, Radix UI"
          date="May 2023 – Present"
        >
          <li>
            Collaborating with a small team of three others to transition an
            outdated codebase to <b>Astro</b> for the game "Honkai: Star Rail", which
            hosts guides, data, and other written content
          </li>
          <li>
            Prototyping an accessible, streamlined, modern new UI using
            <b>Figma</b> alongside other contributors
          </li>
          <li>
            Developing custom Markdown template components to allow our content
            creation team to work more efficiently
          </li>
        </SectionBlock>
      </ul>
    </section>
    <section id="skills">
      <h2>Skills</h2>
      {
        Object.entries(skills).map(([title, list]) => (
          <div class="flex">
            <h3 class="font-bold">{title}:</h3>
            <ul class="ml-2 flex">
              {list.map((skill, i) => (
                <li class="contents">
                  {`${skill}${i < list.length - 1 ? ", " : ""}`}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </section>
  </article>
</PrintLayout>
